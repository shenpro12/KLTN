<div class="wrapper">
  <div class="slide-text">
{{#each items}}
<div class="textshow{{this.id}}">
  <h2 class="thin-font">{{this.description_up}}</h2>
  <h1>{{this.description_down}}</h1>
</div>
{{/each}}
</div>

<div class="slideshows">
  <div class="slideshow slideshow--hero">
    <div class="slides">
      {{#each items}}
      <div class="slide slide{{this.id}}" style="background-image: url(http://drive.google.com/uc?export=view&id={{this.thumb_url}});"></div>
      {{/each}}
    </div>
  </div>
  <div class="slideshow slideshow--contrast slideshow--contrast--before">
    <div class="slides">
      {{#each items}}
      <div class="slide slide{{this.id}}" style="background-image: linear-gradient(to bottom, rgba(200, 200, 75, 0.25) 0, rgba(200, 75, 75, 0.5) 100%), url(http://drive.google.com/uc?export=view&id={{this.thumb_url}})"></div>
      {{/each}}
    </div>
  </div>
  <div class="slideshow slideshow--contrast slideshow--contrast--after">
    <div class="slides">
      {{#each items}}
      <div class="slide slide{{this.id}}" style="background-image: linear-gradient(to bottom, rgba(200, 200, 75, 0.25) 0, rgba(200, 75, 75, 0.5) 100%), url(http://drive.google.com/uc?export=view&id={{this.thumb_url}})"></div>
      {{/each}}
    </div>
  </div>
</div>
</div>

  
  
